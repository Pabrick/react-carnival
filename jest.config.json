{
	"transform": {
		"^.+\\.(t|j)sx?$": "ts-jest"
	},
	"testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"testEnvironment": "jsdom",
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json",
		"node"
	],
	"moduleNameMapper": {
		"\\.(css|less|sass|scss)$": "<rootDir>/src/mocks/styles.mock.tsx",
		"\\.(gif|ttf|eot|svg)$": "<rootDir>/src/mocks/files.mock.tsx"
	}
}
